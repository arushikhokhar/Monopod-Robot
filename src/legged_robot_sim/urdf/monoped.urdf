<robot name="monoped">

    <!--gazebo plugin to control the robot (motors and stuff)-->
   <gazebo>
           <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
               <robotNamespace>/monoped</robotNamespace>
               <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
           </plugin>
       </gazebo>



    <!--gets the position of the robot-->
    <gazebo>
        <plugin name="p3d_base_controller" filename="libgazebo_ros_p3d.so">
            <alwaysOn>true</alwaysOn>
            <updateRate>50.0</updateRate>
            <bodyName>base</bodyName>
            <topicName>odom</topicName>
            <gaussianNoise>0.01</gaussianNoise>
            <frameName>world</frameName>
            <xyzOffsets>0 0 0</xyzOffsets>
            <rpyOffsets>0 0 0</rpyOffsets>
        </plugin>
    </gazebo>

    <gazebo>
        <plugin name="gazebo_ros_imu_controller" filename="libgazebo_ros_imu.so">
            <robotNamespace>/monoped</robotNamespace>
            <topicName>imu/data</topicName>
            <serviceName>imu/service</serviceName>
            <bodyName>base</bodyName>
            <gaussianNoise>0</gaussianNoise>
            <rpyOffsets>0 0 0</rpyOffsets>
            <updateRate>5.0</updateRate>
            <alwaysOn>true</alwaysOn>
            <gaussianNoise>0</gaussianNoise>
        </plugin>
    </gazebo>

    <!--contact sensor-->
    <gazebo reference="lowerleg_contactsensor_link">
        <sensor name="lowerleg_contactsensor_sensor" type="contact">
            <alwaysOn>true</alwaysOn>
            <updateRate>30</updateRate>
            <contact>
                <collision>lowerleg_contactsensor_link_fixed_joint_lump__collision_contact_collision</collision>
            </contact>
            <plugin name="bumper0_plugin" filename="libgazebo_ros_bumper.so">
                <bumperTopicName>lowerleg_contactsensor_state</bumperTopicName>
                <frameName>lowerleg_contactsensor</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <link name="base">
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.4672"/>
        <inertia ixx="0.00506133333333" ixy="0" ixz="0" iyy="0.00506133333333" iyz="0" izz="0.002933333333"/>
    </inertial>

    <collision>
        <geometry>
            <box size="0.20 0.20 0.30"/>
        </geometry>
    </collision>

	<visual>
        <geometry>
            <box size="0.20 0.20 0.30"/>
	    </geometry>
	    <material name="blue">
            <color rgba="0.3 0.3 0.3 1.0"/>
	    </material>
	</visual>        
    </link>

    <gazebo reference="base">
        <kp>1000.0</kp>
        <kd>1000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/Turquoise</material>
    </gazebo>

    
    <link name="hipassembly">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1168"/>
            <inertia ixx="0.00140906974933" ixy="0" ixz="0" iyy="0.001529597616" iyz="0" izz="0.000218659333333"/>
        </inertial>
        <collision>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://legged_robot_sim/meshes/hipassembly.dae" scale="1 1 1"/>
            </geometry>
        </collision>
	    <visual>
	      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
	      <geometry>
	        <mesh filename="package://legged_robot_sim/meshes/hipassembly.dae" scale="1 1 1"/>
	      </geometry>
	      <material name="white"/>
	    </visual>        
    </link>

    <gazebo reference="hipassembly">
        <kp>1000.0</kp>
        <kd>1000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/FlatBlack</material>
    </gazebo>



    <link name="upperleg">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.18"/>
            <inertia ixx="0.0002835" ixy="0" ixz="0" iyy="0.0002835" iyz="0" izz="0.000324"/>
        </inertial>

        <collision>
          <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
          <geometry>
            <mesh filename="package://legged_robot_sim/meshes/upperleg.dae" scale="1 1 1"/>
          </geometry>
          <material name="blue"/>
        </collision>
	    <visual>
	      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
	      <geometry>
	        <mesh filename="package://legged_robot_sim/meshes/upperleg.dae" scale="1 1 1"/>
	      </geometry>
	      <material name="blue"/>
	    </visual>
    </link>

    <gazebo reference="upperleg">
        <kp>1000.0</kp>
        <kd>1000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <link name="lowerleg">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.18"/>
            <inertia ixx="0.0002835" ixy="0" ixz="0" iyy="0.0002835" iyz="0" izz="0.000324"/>
        </inertial>
        <collision>
            <geometry>
                <mesh filename="package://legged_robot_sim/meshes/lowerleg.dae" scale="1 1 1"/>
            </geometry>
        </collision>
	    <visual>
	      <geometry>
	        <mesh filename="package://legged_robot_sim/meshes/lowerleg.dae" scale="1 1 1"/>
	      </geometry>
	      <material name="blue"/>
	    </visual>        
    </link>

    <link name="lowerleg_contactsensor_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0000026667" ixy="0.0" ixz="0.0" iyy="0.0000026667" iyz="0.0" izz="0.0000026667"/>
        </inertial>
        <collision name="collision_contact">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.020"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <sphere radius="0.020"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0 0 1.0"/>
            </material>
        </visual>
    </link>

    <gazebo reference="lowerleg_contactsensor_link">
        <kp>1000.0</kp>
        <kd>1000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>
        <material>Gazebo/Purple</material>
    </gazebo>
    
    <joint name="lowerleg_contactsensor_link_joint" type="fixed">
        <parent link="lowerleg"/>
        <child link="lowerleg_contactsensor_link"/>
        <origin xyz="0.35 0 0" rpy="0 0 0"/>
    </joint>

     <gazebo reference="lowerleg_contactsensor_link_joint">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>


    <gazebo reference="lowerleg">
        <kp>1000.0</kp>
        <kd>1000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <joint name="haa_joint" type="revolute">
        <origin xyz="0.0 0.0 -0.15000" rpy="2.0344439357957036 1.5707962290814481 -1.1071487177940917"/>
        <parent link="base"/>
        <child  link="hipassembly"/>
        <limit effort="200" lower="-1.6" upper="1.6" velocity="1.0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="hfe_joint" type="revolute">
        <origin xyz="0.08000 0.00000 0.00000" rpy="1.5707963705062866 -0.0 0.0"/>
        <parent link="hipassembly"/>
        <child  link="upperleg"/>
        <limit effort="200" lower="-1.6" upper="1.6" velocity="1.0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="kfe_joint" type="revolute">
        <origin xyz="0.35000 0.00000 0.00000" rpy="0.0 0.0 0.0"/>
        <parent link="upperleg"/>
        <child  link="lowerleg"/>
        <limit effort="200" lower="-1.6" upper="1.6" velocity="1.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!--Adding motors and stuff (actuators: relationship between actuators and joints is given by transmission tag)-->
    <transmission name="haa_joint_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="haa_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="haa_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <transmission name="hfe_joint_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="hfe_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="hfe_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <transmission name="kfe_joint_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="kfe_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="kfe_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>




</robot>

